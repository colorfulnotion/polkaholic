<%- include('header', {chainInfo: chainInfo, title: "Asset"}); %>

<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="/chains#xcmassets">Polkaholic XCM Assets</a></li>
    <li class="breadcrumb-item active" aria-current="page"><%= symbol; %></li>
  </ol>
</nav>

<div class="row">
  <div class="col-md-6">
<table class="table">
  <thead>
    <tr>
      <th scope="col">Price Source</th>
      <th scope="col">Price</th>
      <th scope="col">Last</th>
      <th scope="col">Liquidity?</th>
      <th scope="col">Chart</th>
    </tr>
  </thead>
  <tbody>

<%
let routerAssetChain = null;
let routerName = null;
let liquid = 10;
for ( const p of priceUSD_routerAsset ) {
    if ( p.liquid < liquid ) {
      routerAssetChain = p.routerAssetChain;
      routerName = p.routerName;
      liquid = p.liquid;
    }
%>
    <tr>
      <th scope="row"><%= p.routerName %></th>
      <td><%= uiTool.currencyFormat(p.priceUSD); %></td>
      <td><%= uiTool.presentTS(p.indexTS); %></td>
      <td>
<% if ( p.liquid < 0.1 ) { %>
   <button type="button" class="btn btn-success">High</button>
<% } else if ( p.liquid < 0.5 ) { %>
   <button type="button" class="btn btn-warning">Low</button>
<% } else if ( p.liquid < 3.0 ) { %>  
   <button type="button" class="btn btn-danger">Very Low</button>
<% } else { %>
   <button type="button" class="btn btn-dark">NOT LIQUID (<%= p.liquid %>)</button>
<% } %>
</td>
      <td><a href="javascript:showRouterAssetChainPrices('<%= p.routerAssetChain %>', '<%= p.routerName %>')" class="btn btn-primary">Chart</button></td>
    </tr>
<% } %>
  </tbody>
</table>
   </div>
  <div class="col-md-6">
   <div id="container" style="width: 100%"></div>
  </div>
  
</div>


<!-- Nav tabs -->
<ul class="nav nav-tabs" id="symbolTab" role="tablist">
<%
let tabs = [
  { title: "Chains with Symbol", target: "chains" },
];
for (let i=0; i<tabs.length; i++) {
  let t = tabs[i];
  let title = t.title;
  let target = t.target;
  let id = target + "-tab";
  let href = "#" + target;
%>
  <li class="nav-item" role="presentation">
    <a class="nav-link" id="<%= id; %>" data-mdb-toggle="tab" href="<%= href; %>" role="tab" aria-controls="<%= target; %>"><%= title; %></a>
  </li>
<%
}
%>
</ul>

<!-- Tab panes -->
<div class="tab-content">
  <div class="tab-pane" id="chains" role="tabpanel" aria-labelledby="chains-tab">
    <table id="tablechains" class="display" style='width: 100%'>
      <thead>
        <tr>
          <th>Chain</th>
          <th>Your Holdings</th>
          <th>CurrencyID</th>
          <th># Holders</th>
          <th>Price</th>
          <th>Total Free</th>
          <th>TVL Free</th>
          <th>Total Reserved</th>
          <th>TVL Reserved</th>
        </tr>
      </thead>
    </table>
  </div>
</div>


<script src="https://code.highcharts.com/stock/highstock.js"></script>
<script src="https://code.highcharts.com/stock/modules/data.js"></script>
<script src="https://code.highcharts.com/stock/modules/exporting.js"></script>
<script src="https://code.highcharts.com/stock/modules/export-data.js"></script>



<script>
var symbol = '<%- symbol; %>';
var tabs = <%- JSON.stringify(tabs); %>;
var accounts = <%- JSON.stringify(accounts); %>;
var chains = <%- JSON.stringify(chains); %>;
var priceUSD_routerAsset = <%- JSON.stringify(priceUSD_routerAsset); %>;
var relayChain = chains[0].relayChain;
function showRouterAssetChainPrices(routerAssetChain, routerName) {
  let url = `${baseURL}/asset/pricefeed/${encodeURIComponent(symbol)}/${encodeURIComponent(relayChain)}/${encodeURIComponent(routerAssetChain)}`
  var series_name = `USD Value`
  var title_text = `${symbol} USD Value (Source: ${routerName})`;
  Highcharts.getJSON(url, function(data) {
    // Create the chart
    Highcharts.stockChart('container', {
      rangeSelector: {
        selected: 1
      },
      title: {
        text: title_text
      },
      series: [{
        name: series_name,
        data: data,
        tooltip: {
          valueDecimals: 3
        }
      }]
    });
});
}
let routerAssetChain = "<%= routerAssetChain %>";
let routerName = "<%= routerName; %>";
showRouterAssetChainPrices(routerAssetChain, routerName);
</script>


<%- include('footer', {apiUrl: apiUrl}); %>
<script src="/symbol.js"></script>
